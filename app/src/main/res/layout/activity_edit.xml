<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828">

    <ScrollView
        android:id="@+id/descriptText2"
        android:layout_width="370dp"
        android:layout_height="345dp"
        android:background="@drawable/round_edittext"
        android:padding="10dp"
        android:scrollbars="none"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberEquip"
        app:layout_constraintVertical_bias="0.00999999" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFurther"
        android:layout_width="229dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:text="Далее"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptText2"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/textViewHead"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:text="Редактирование"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNumberEquip"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Номер оборудования"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHead"
        app:layout_constraintVertical_bias="0.00999999" />

</androidx.constraintlayout.widget.ConstraintLayout>
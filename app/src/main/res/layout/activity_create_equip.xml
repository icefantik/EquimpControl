<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="297dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Добавление"
        android:textColor="@color/white"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editEquipEtc"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:text="Добавить ещё"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAudiencNum" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editEquip"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/round_button"
        android:text="Добавить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editEquipEtc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAudiencNum" />

    <EditText
        android:id="@+id/editTextEquipId"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Номер оборудования"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextAudiencNum"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Номер аудитории"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDayOf"
        app:layout_constraintVertical_bias="0.06999999" />

    <EditText
        android:id="@+id/editTextEquipName"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Название оборудования"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEquipTypeId"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/editTextDayOf"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Дата установки"
        android:inputType="date"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEquipName"
        app:layout_constraintVertical_bias="0.050000012" />

    <EditText
        android:id="@+id/editTextEquipTypeId"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/round_edittext"
        android:ems="10"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/black"
        android:hint="Номер типа оборудования"
        android:inputType="phone"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEquipId"
        app:layout_constraintVertical_bias="0.029999971" />


</androidx.constraintlayout.widget.ConstraintLayout>